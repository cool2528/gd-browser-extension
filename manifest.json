{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "short_name": "GDownload",
  "version": "1.0.0",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  
  "author": "GDownload Team",
  "homepage_url": "https://github.com/cool2528/GDownload",
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "GDownload - Capture Links"
  },
  
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "webRequest",
    "downloads"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Open GDownload popup"
    },
    "capture_all_links": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Capture all links on current page"
    }
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "gdownload-extension@example.com",
      "strict_min_version": "115.0"
    }
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
